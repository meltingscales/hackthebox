<div class="container h-100">
<br><h1 class="text-center font-weight-bold">User List</h1>
<% @users.each do |user| %>
 <ul class="listing">
  <div class="row">
   <div class="card bg-light mx-auto col-4">
    <li class="text-center"><br><%= link_to gravatar_for(user), user_path(user) %><br><br></li>
    <li class="article-title text-center"><%= link_to user.username, user_path(user) %></li>
    <hr>
    <li class="text-center"><small><%= pluralize(user.articles.count, "article") if user.articles %></small><br><br></li>
   </div>
  </div>
 </ul>
 <% end %>
</div>
<div class="d-flex justify-content-center">
 <%= will_paginate @users %>
</div>

